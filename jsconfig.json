{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@context/*": ["src/context/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@server/*": ["src/server/*"],
      "@svg/*": ["src/svg/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
